<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration"
    tools:context=".ExplicitViewActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="152dp"
        android:layout_height="136dp"
        app:layout_constraintBottom_toTopOf="@+id/name_id_regis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/regi_logo" />

    <EditText
        android:id="@+id/name_id_regis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/tx_custom"
        android:ems="10"
        android:hint="Enter Your Name "
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#AEAEAE"
        app:layout_constraintBottom_toTopOf="@+id/father_name_id_regis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <EditText
        android:id="@+id/father_name_id_regis"


        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/tx_custom"
        android:ems="10"
        android:hint="Enter Your Father name"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#AEAEAE"
        app:layout_constraintBottom_toTopOf="@+id/phone_id_regis"
        app:layout_constraintEnd_toEndOf="@+id/name_id_regis"
        app:layout_constraintStart_toStartOf="@+id/name_id_regis"
        app:layout_constraintTop_toBottomOf="@+id/name_id_regis" />

    <EditText
        android:id="@+id/phone_id_regis"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tx_custom"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#AEAEAE"
        app:layout_constraintBottom_toTopOf="@+id/roll_id_regis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/father_name_id_regis" />

    <EditText
        android:id="@+id/roll_id_regis"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tx_custom"
        android:ems="10"
        android:hint="Roll Number"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#AEAEAE"
        app:layout_constraintBottom_toTopOf="@+id/btn_regis"
        app:layout_constraintEnd_toEndOf="@+id/phone_id_regis"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/phone_id_regis"
        app:layout_constraintTop_toBottomOf="@+id/phone_id_regis" />

    <Button
        android:id="@+id/btn_regis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/roll_id_regis"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/roll_id_regis"
        app:layout_constraintTop_toBottomOf="@+id/roll_id_regis" />

</androidx.constraintlayout.widget.ConstraintLayout>
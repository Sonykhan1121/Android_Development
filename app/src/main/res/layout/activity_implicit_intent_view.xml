<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bag"
    tools:context=".ImplicitIntentViewActivity">

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/openwebpage_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_custom"
        android:drawableLeft="@drawable/openwebpage"
        android:padding="15dp"
        android:text="OpenWebPage"
        app:layout_constraintBottom_toTopOf="@+id/PhoneCall_id"
        app:layout_constraintEnd_toEndOf="@+id/PhoneCall_id"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/PhoneCall_id"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/PhoneCall_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_custom"
        android:drawableLeft="@drawable/telephone"
        android:padding="15dp"
        android:text="PhoneCall"
        app:layout_constraintBottom_toTopOf="@+id/camera_id"
        app:layout_constraintEnd_toEndOf="@+id/camera_id"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/camera_id"
        app:layout_constraintTop_toBottomOf="@+id/openwebpage_id" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/camera_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_custom"
        android:drawableLeft="@drawable/camera"
        android:padding="15dp"
        android:text="Camera"
        app:layout_constraintBottom_toTopOf="@+id/text_id"
        app:layout_constraintEnd_toEndOf="@+id/text_id"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/text_id"
        app:layout_constraintTop_toBottomOf="@+id/PhoneCall_id" />

    <EditText
        android:id="@+id/text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:ems="10"
        android:hint="Enter Your Text Here"
        android:inputType="text"
        android:padding="15dp"
        android:textColor="#FFEB3B"
        android:textColorHint="#8AFFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/Share_txt_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_id" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Share_txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_custom"
        android:drawableLeft="@drawable/share"
        android:padding="15dp"
        android:text="ShareText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_id" />
</androidx.constraintlayout.widget.ConstraintLayout>